---
import Layout from '@/layouts/Layout.astro'
import { Articles } from "@/lib/data/blogs"

const Path  = Astro.url.pathname;
const { id } =Astro.params;
const props = Astro.props 

const blog: any = Articles.find((blog) => blog.id === Number(id));

const { title, description, post, img, link} = blog;
import Menu from '@assets/Menu.pdf'

---

<Layout title='Blog' description='Conoce nuestras ultimas novedades'>
    <section class="container mx-auto">
        <article class="flex justify-center items-center">
            <div class="min-h-screen max-w-[75%]" >
                <h1 class="text-5xl font-bold p-4 pb-10 md:pb-10 transition-all duration-1000" >{title}</h1>
                
                <p class="text-xl w-auto text-pretty pb-12">{description} <a class="text-cyan-400 font-medium" target="_blank" href={link}>{title}</a></p>

                <div class="flex justify-center " >

                    <img src={img} alt="Stellar logo" class="w-[30em] md:w-[40em] transition-all duration-1000"/>

              
                </div>
                <p class="text-xl w-auto text-pretty py-6">{post}</p>
                <div class="flex justify-center">

                    {Path===`/blog/${2}` && <a class="text-cyan-400 font-medium border w-auto text-center p-2 rounded-full px-4" target="_blank" href={Menu}>Let's see</a>}
                </div>
                
                    {Path===`/blog/${id}` && <a class="text-cyan-400 font-medium flex items-center border w-20 text-center p-2 rounded-full px-4 my-10" href="/Blog" >
                    <svg width="1em" height="1em" viewBox="0 0 24 24" {...props}><path fill="#ffffff" d="m7.825 13l5.6 5.6L12 20l-8-8l8-8l1.425 1.4l-5.6 5.6H20v2z"/></svg>
                    Back</a>}
                
            </div>
        </article>
    </section>
</Layout>
